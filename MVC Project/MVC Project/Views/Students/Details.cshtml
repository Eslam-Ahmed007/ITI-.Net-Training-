@model MVC_Project.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
        color: #333;
    }

    .card {
        margin-top: 20px;
    }

    .animate__zoomIn {
        animation-duration: 1s;
    }
</style>

<h1 class="text-center mb-4 animate__animated animate__fadeIn">Student Details</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card animate__animated animate__zoomIn">
            <div class="card-body">
                <h4 class="card-title">Student</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>
                    <dt class="col-sm-4">Grade</dt>
                    <dd class="col-sm-8">@Model.Grade</dd>
                    <dt class="col-sm-4">Department</dt>
                    <dd class="col-sm-8">@Model.Department?.Name</dd>
                </dl>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>