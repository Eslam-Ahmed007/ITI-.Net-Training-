@model MVC_Project.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
        color: #333;
    }

    .delete-card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        background-color: #ffffff;
        max-width: 400px;
    }

    .card-img-top {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        margin: 20px auto;
        transition: transform 0.3s ease;
    }

        .card-img-top:hover {
            transform: scale(1.1);
        }

    .card-title {
        color: #dc3545; /* Red for delete warning */
    }

    .text-danger {
        color: #dc3545 !important;
    }
</style>

<h1 class="text-center mb-4 animate__animated animate__fadeIn">Delete Instructor</h1>

<h3 class="text-center text-danger animate__animated animate__pulse">Are you sure you want to delete this?</h3>

<div class="card delete-card mx-auto animate__animated animate__zoomIn">
    <img src="/images/@Model.Image" class="card-img-top" alt="Instructor Image" />
    <div class="card-body text-center">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <strong>Address:</strong> @Model.Address<br />
            <strong>Salary:</strong> @Model.Salary<br />
            <strong>Department:</strong> @Model.Department.Name<br />
            <strong>Course:</strong> @Model.Course.Name
        </p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this instructor?');" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>