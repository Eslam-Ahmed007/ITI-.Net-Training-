@{
    ViewData["Title"] = "Home Page";
}

<div class="home-content">
    <!-- Welcome Cards Section -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <!-- Card 1 -->
                <div class="col-lg-4 col-md-6">
                    <div class="glass-card feature-card animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                        <div class="icon-wrapper mb-4">
                            <i class="fas fa-book-open fa-3x" style="color: #667eea;"></i>
                        </div>
                        <h3 class="text-white fw-bold mb-3">Knowledge Hub</h3>
                        <p class="text-white-50 mb-4">
                            Explore a vast collection of courses designed by expert instructors. 
                            Your journey to excellence starts here.
                        </p>
                        <a asp-controller="Courses" asp-action="Index" class="btn btn-primary w-100">
                            <i class="fas fa-arrow-right me-2"></i>View Courses
                        </a>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="col-lg-4 col-md-6">
                    <div class="glass-card feature-card animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                        <div class="icon-wrapper mb-4">
                            <i class="fas fa-chalkboard-teacher fa-3x" style="color: #f093fb;"></i>
                        </div>
                        <h3 class="text-white fw-bold mb-3">Expert Instructors</h3>
                        <p class="text-white-50 mb-4">
                            Learn from the best minds in the industry. Our instructors bring 
                            years of experience and passion.
                        </p>
                        <a asp-controller="Instructors" asp-action="Index" class="btn btn-warning w-100">
                            <i class="fas fa-arrow-right me-2"></i>Meet Instructors
                        </a>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="col-lg-4 col-md-6">
                    <div class="glass-card feature-card animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                        <div class="icon-wrapper mb-4">
                            <i class="fas fa-user-graduate fa-3x" style="color: #4facfe;"></i>
                        </div>
                        <h3 class="text-white fw-bold mb-3">Student Success</h3>
                        <p class="text-white-50 mb-4">
                            Join thousands of students achieving their dreams. Your success 
                            story begins with a single step.
                        </p>
                        <a asp-controller="Students" asp-action="Index" class="btn btn-info w-100">
                            <i class="fas fa-arrow-right me-2"></i>View Students
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3 col-sm-6">
                    <div class="glass-card text-center stat-card animate__animated animate__zoomIn">
                        <i class="fas fa-users fa-3x mb-3" style="color: #43e97b;"></i>
                        <h2 class="text-white fw-bold mb-2">5000+</h2>
                        <p class="text-white-50 mb-0">Active Students</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="glass-card text-center stat-card animate__animated animate__zoomIn" style="animation-delay: 0.1s;">
                        <i class="fas fa-book fa-3x mb-3" style="color: #667eea;"></i>
                        <h2 class="text-white fw-bold mb-2">200+</h2>
                        <p class="text-white-50 mb-0">Available Courses</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="glass-card text-center stat-card animate__animated animate__zoomIn" style="animation-delay: 0.2s;">
                        <i class="fas fa-certificate fa-3x mb-3" style="color: #f093fb;"></i>
                        <h2 class="text-white fw-bold mb-2">1500+</h2>
                        <p class="text-white-50 mb-0">Certifications</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="glass-card text-center stat-card animate__animated animate__zoomIn" style="animation-delay: 0.3s;">
                        <i class="fas fa-star fa-3x mb-3" style="color: #fee140;"></i>
                        <h2 class="text-white fw-bold mb-2">4.9/5</h2>
                        <p class="text-white-50 mb-0">Average Rating</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8 text-center">
                    <div class="glass-card animate__animated animate__fadeIn">
                        <h2 class="text-white fw-bold mb-3">
                            <i class="fas fa-rocket me-2"></i>Why Choose MVC Project?
                        </h2>
                        <p class="text-white-50 mb-0 fs-5">
                            Experience education reimagined with cutting-edge technology and innovative design
                        </p>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="glass-card feature-item animate__animated animate__fadeInLeft">
                        <div class="d-flex align-items-start">
                            <div class="icon-box me-4">
                                <i class="fas fa-laptop-code fa-2x" style="color: #4facfe;"></i>
                            </div>
                            <div>
                                <h4 class="text-white fw-bold mb-3">Modern Platform</h4>
                                <p class="text-white-50 mb-0">
                                    Built with the latest technologies to provide a seamless and intuitive learning experience.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="glass-card feature-item animate__animated animate__fadeInRight">
                        <div class="d-flex align-items-start">
                            <div class="icon-box me-4">
                                <i class="fas fa-shield-alt fa-2x" style="color: #43e97b;"></i>
                            </div>
                            <div>
                                <h4 class="text-white fw-bold mb-3">Secure & Reliable</h4>
                                <p class="text-white-50 mb-0">
                                    Your data is protected with enterprise-grade security and regular backups.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="glass-card feature-item animate__animated animate__fadeInLeft" style="animation-delay: 0.2s;">
                        <div class="d-flex align-items-start">
                            <div class="icon-box me-4">
                                <i class="fas fa-chart-line fa-2x" style="color: #f093fb;"></i>
                            </div>
                            <div>
                                <h4 class="text-white fw-bold mb-3">Track Progress</h4>
                                <p class="text-white-50 mb-0">
                                    Monitor your learning journey with comprehensive analytics and insights.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="glass-card feature-item animate__animated animate__fadeInRight" style="animation-delay: 0.2s;">
                        <div class="d-flex align-items-start">
                            <div class="icon-box me-4">
                                <i class="fas fa-globe fa-2x" style="color: #667eea;"></i>
                            </div>
                            <div>
                                <h4 class="text-white fw-bold mb-3">Learn Anywhere</h4>
                                <p class="text-white-50 mb-0">
                                    Access your courses from any device, anytime, anywhere in the world.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="glass-card cta-card text-center animate__animated animate__pulse">
                        <h2 class="text-white fw-bold mb-4">
                            <i class="fas fa-graduation-cap me-2"></i>Ready to Start Your Journey?
                        </h2>
                        <p class="text-white-50 mb-4 fs-5">
                            Join our community of learners and unlock your full potential today
                        </p>
                        <div class="d-flex flex-wrap justify-content-center gap-3">
                            <a asp-controller="Departments" asp-action="Index" class="btn btn-success btn-lg">
                                <i class="fas fa-building me-2"></i>Explore Departments
                            </a>
                            <a asp-controller="CourseStudents" asp-action="Index" class="btn btn-info btn-lg">
                                <i class="fas fa-users me-2"></i>View Enrollments
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .feature-card {
        height: 100%;
        transition: all 0.4s ease;
    }

    .feature-card:hover {
        transform: translateY(-15px) scale(1.02);
    }

    .icon-wrapper {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .stat-card {
        padding: 2rem 1rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-10px) rotate(2deg);
    }

    .stat-card h2 {
        font-size: 2.5rem;
    }

    .feature-item {
        padding: 2rem;
    }

    .icon-box {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .cta-card {
        padding: 3rem 2rem;
        background: rgba(255, 255, 255, 0.12);
        position: relative;
        overflow: hidden;
    }

    .cta-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 4s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .btn-lg {
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .stat-card h2 {
            font-size: 2rem;
        }
        
        .feature-card {
            margin-bottom: 1rem;
        }
        
        .btn-lg {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }
</style>