@model MVC_Project.Models.CourseStudents

@{
    ViewData["Title"] = "Delete Course Students";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
        color: #333;
    }

    .card {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .animate__zoomIn {
        animation-duration: 1s;
    }
</style>

<h1 class="text-center mb-4 animate__animated animate__fadeIn">Delete Course Students</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card animate__animated animate__zoomIn">
            <div class="card-body">
                <h4 class="card-title">Delete Confirmation</h4>
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Degree</dt>
                    <dd class="col-sm-8">@Model.Degree</dd>
                    <dt class="col-sm-4">Course</dt>
                    <dd class="col-sm-8">@Model.Course?.Name</dd>
                    <dt class="col-sm-4">Student</dt>
                    <dd class="col-sm-8">@Model.Student?.Name</dd>
                </dl>
                <form asp-action="Delete" asp-controller="CourseStudents" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" asp-controller="CourseStudents" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>