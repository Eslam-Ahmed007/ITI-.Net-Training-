@model IEnumerable<MVC_Project.Models.CourseStudents>

@{
    ViewData["Title"] = "Course Students";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
        color: #333;
    }

    .table {
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .animate__fadeIn {
        animation-duration: 1s;
    }
</style>

<h1 class="text-center mb-4 animate__animated animate__fadeIn">Students Course </h1>

<div class="row justify-content-center">
    <div class="col-md-10">
        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Degree</th>
                    <th>Course</th>
                    <th>Student</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Degree</td>
                        <td>@item.Course?.Name</td>
                        <td>@item.Student?.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>